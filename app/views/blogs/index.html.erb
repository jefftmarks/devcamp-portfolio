<p style="color: green"><%= notice %></p>

<h1>Blogs by Jeff</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Status</th>
      <th colspan="4"></th>
    </tr>
  </thead>
  <tbody>
    <% @blogs.each do |blog| %>
      <tr>
        <td><%= blog.title %></td>
        <td><%= blog.body %></td>
        <td><%= link_to blog.status, toggle_status_blog_path(blog) %></td>
        <td><%= link_to "Show", blog %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "New blog", new_blog_path %>
